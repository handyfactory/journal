
<button type="button" class="btn btn-outline-primary"><a href="/journals/new">오늘의 일기</a></button>


<%@journals.each do |j| %>
    <div class="card text-center">
      <div class="card-header">
        Featured
      </div>
      <div class="card-body">
        <h5 class="card-title"><%=j.title%></h5>
        <h6 class="card-title"><%=j.weather%></h6>
        <h6 class="card-title"><%=j.feeling%></h6>
        <a href="/show" class="btn btn-primary">일기 확인하기</a>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
<%end%>

